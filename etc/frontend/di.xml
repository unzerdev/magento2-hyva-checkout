<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Hyva\CompatModuleFallback\Model\CompatModuleRegistry">
        <arguments>
            <argument name="compatModules" xsi:type="array">
                <item name="hyva-magento2-unzer-papi-checkout" xsi:type="array">
                    <item name="original_module" xsi:type="string">Unzer_PAPI</item>
                    <item name="compat_module"  xsi:type="string">Unzer_HyvaCheckout</item>
                </item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Vault\Model\Method\Vault">
        <plugin name="magpay_payments_vault_method" disabled="true"/>
    </type>

    <virtualType name="UnzerPlaceOrderService"
                 type="Unzer\HyvaCheckout\Model\Magewire\Payment\UnzerPlaceOrderService">
    </virtualType>

    <type name="Hyva\Checkout\Model\Magewire\Payment\PlaceOrderServiceProvider">
        <arguments>
            <argument name="placeOrderServiceList" xsi:type="array">
                <item name="unzer_cards" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_alipay" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_paypal" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_klarna" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_ideal" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_bancontact" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_eps" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_open_banking" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_prepayment" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_przelewy24" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_twint" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_wechatpay" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_paylater_direct_debit" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_paylater_installment" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_paylater_invoice" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_paylater_invoice_b2b" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_direct_debit" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_googlepay" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_applepayv2" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_cards_vault" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_paypal_vault" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_wero" xsi:type="object">UnzerPlaceOrderService</item>
                <item name="unzer_direct_debit_vault" xsi:type="object">UnzerPlaceOrderService</item>
            </argument>
        </arguments>
    </type>
</config>
